<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-5">
                <h1>Add Ingredients</h1>
                <form action="/add-ingredient/<%= recipe._id %>" method="POST">
                    <div class="form-row">
                        <div class="form-group col-2">
                            <label for="quantity">Quantity</label>
                            <input type="text" class="form-control" id="quantity" name="quantity">
                        </div>
                        <div class="form-group col-2">
                            <label for="measurementUnit">Unit</label>
                            <input type="text" class="form-control" id="measurementUnit" name="measurementUnit">
                        </div>
                        <div class="form-group col-8">
                            <label for="ingredient">Ingredient</label>
                            <input type="text" class="form-control" id="ingredient" name="ingredient">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Ingredient</button>
                </form>

                <h1>Add Directions</h1>
                <form action="/add-direction/<%= recipe._id %>" method="POST">
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label for="direction">Direction</label>
                            <input type="text" class="form-control" id="direction" name="direction">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Direction</button>
                </form>

                <a href="/recipes" class="btn btn-secondary">Done</a>
            </div>
            <%- include('../includes/recipe-detail-view.ejs', {recipe: recipe}) %>
        </div>
    </main>
<%- include('../includes/end.ejs') %>